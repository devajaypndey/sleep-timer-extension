{
  "manifest_version": 3,
  "name": "Sleep Timer",
  "version": "1.0.0",
  "description": "Auto pause or mute videos after a timer",

  "action": {
    "default_popup": "popup/index.html"
  },

  "background": {
    "service_worker": "background/serviceWorker.js"
  },

  "permissions": ["activeTab", "scripting", "alarms"],
  "host_permissions": ["<all_urls>"]
}
